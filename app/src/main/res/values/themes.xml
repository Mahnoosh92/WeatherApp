<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WeatherApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:fontFamily">@font/lato_black</item>
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/queen</item>
        <item name="colorSecondaryVariant">@color/sister</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="regularText" parent="Widget.MaterialComponents.TextView">
        <item name="fontFamily">@font/regular</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>